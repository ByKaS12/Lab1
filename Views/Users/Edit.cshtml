<!DOCTYPE html>
<html>
<head>
    <title></title>
    @model EndedTask.Models.ViewModels.EditUserViewModel
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
</head>
<body>
    @await Html.PartialAsync("NavBar");
    <div class="container">
        <div class="container__select">
            <form asp-action="Edit" asp-controller="Users">
                <fieldset class="fieldset">
                    <legend class="legend">Изменение Email Пользователя @User.Identity.Name</legend>
                    <div asp-validation-summary="All"></div>
                    <div>
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div>
                        <label asp-for="Email">Email</label>
                        <input class="intro__input intro_input--select" type="text" asp-for="Email" />
                    </div>
                    <div>
                        <button class="btn btn--red" type="submit">Сохранить</button>
                    </div>
                    </fieldset>
            </form>
            </div>
        </div>
</body>
</html>