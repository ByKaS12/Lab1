<!DOCTYPE html>
<html>
<head>
    <title></title>
    @model EndedTask.Models.ViewModels.ChangePasswordViewModel
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
</head>
<body>
    @await Html.PartialAsync("NavBar");
    <div class="container">
        <div class="container__select">
            <form asp-action="ChangePassword" asp-controller="Users">
                <fieldset class="fieldset">
                    <legend class="legend">Изменение пароля для пользователя @Model.Email</legend>
                    <div asp-validation-summary="All" class=""></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Email" />

                    <div class="">
                        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
                        <input type="text" asp-for="NewPassword" class="intro__input intro_input--select" />
                    </div>
                    <div class="">
                        <input type="submit" value="Сохранить" class="btn btn--red" />
                    </div>
                    </fieldset>
            </form>
            </div>
        </div>
</body>
</html>