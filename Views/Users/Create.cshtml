<!DOCTYPE html>
<html>
<head>
    <title></title>
    @model EndedTask.Models.ViewModels.CreateUserViewModel
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
</head>
<body>
    @await Html.PartialAsync("NavBar");
    <div class="container">
        <div class="container__select">
            <form asp-action="Create" asp-controller="Users">
                <fieldset class="fieldset">
                    <legend class="legend">Создание нового пользователя</legend>
                    <div asp-validation-summary="All"></div>
                    <div>
                        <label asp-for="Email">Email</label>
                        <input class="intro__input intro_input--select" type="text" asp-for="Email" />
                    </div>
                    <div>
                        <label asp-for="Password">Пароль</label>
                        <input class="intro__input intro_input--select" type="password" asp-for="Password" />
                    </div>
                    <div>
                        <button class="btn btn--red" type="submit">Добавить</button>
                    </div>
                    </fieldset>
            </form>
            </div>
        </div>

</body>
</html>