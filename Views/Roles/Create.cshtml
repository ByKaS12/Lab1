<!DOCTYPE html>
<html>
<head>
    <title></title>
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @model string

</head>
<body>
    @await Html.PartialAsync("NavBar");
    <div class="container">
        <div class="container__select">
            <div asp-validation-summary="All"></div>
